{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",
    "sourceMap": true,
    "target": "ES6",
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importsNotUsedAsValues": "error"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
